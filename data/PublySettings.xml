<?xml version="1.0" encoding="UTF-8"?>
<plgsettings majorversion="0" minorversion="5">
  <!-- Relative path to a BibTeX file with the publication list -->
  <publications>misc/testdata/route.bib</publications>

  <!-- General settings -->
  <generalsettings>
    <target>misc/test/test.html</target>
    <mynames><![CDATA[jit;Prosenjit Bose]]></mynames>
    <listallauthors>false</listallauthors>
    <namedisplay>FULL</namedisplay>
    <reversenames>false</reversenames>
    <titlefirst>false</titlefirst>
    <numbering>GLOBAL</numbering>
    <reversenumbering>true</reversenumbering>
    <categories>
      <category>BOOK</category>
      <category>JOURNAL</category>
      <category>CONFERENCE</category>
      <category>CHAPTER</category>
      <category>THESIS</category>
      <category>OTHER</category>
    </categories>
    <categorynotes>
    </categorynotes>
  </generalsettings>

  <!-- HTML-specific settings -->
  <htmlsettings>
    <generatetextversion>true</generatetextversion>
    <generatebibtexversion>true</generatebibtexversion>
    <linktoalternateversions>true</linktoalternateversions>
    <navplacement>BEFORE_SECTION_AND_BOTTOM</navplacement>
    <includeabstract>ALL</includeabstract>
    <includebibtex>ARXIV</includebibtex>
    <includepaper>ARXIV</includepaper>
    <titletarget>NONE</titletarget>
    <header>data/defaultHeader.html</header>
    <footer>data/defaultFooter.html</footer>
    <googleanalyticsuser><![CDATA[]]></googleanalyticsuser>
    <presentedtext><![CDATA[]]></presentedtext>
  </htmlsettings>

  <!-- Console settings -->
  <consolesettings>
    <showWarnings>true</showWarnings>
    <warnMissingReferences>true</warnMissingReferences>
    <warnNotAuthor>true</warnNotAuthor>
    <showLogs>true</showLogs>
    <showStackTraces>false</showStackTraces>
  </consolesettings>

</plgsettings>
